<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:id="@+id/view2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/margin_main"
        android:background="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewOstaviKomentar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2"
        android:layout_marginLeft="@dimen/small_margin"
        android:text="Svi Komentari"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="6dp"
        android:src="@drawable/comment"
        app:layout_constraintBottom_toBottomOf="@+id/textViewOstaviKomentar"
        app:layout_constraintStart_toEndOf="@+id/textViewOstaviKomentar"
        app:layout_constraintTop_toTopOf="@+id/textViewOstaviKomentar"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/textViewCommentCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        android:layout_marginLeft="5dp"
        android:text="4"
        android:textColor="@color/white"/>



</androidx.constraintlayout.widget.ConstraintLayout>